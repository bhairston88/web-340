<!DOCTYPE html>
<html lang="en">
    <%- include("header") %>

    <body>
    <%- include("navbar") %>
    
    <div role="main" class="container" style="width: 50%;">
        <br /><br />

      <% if (employees.length) { %>
        <h2> Employee Listing </h2><br />
        <a href="/new">Add New</a>
        <table class="table table-hover">
            <thead class="bg-secondary">
                <tr>
                    <th class="text-white">First Name</th>
                    <th class="text-white">Last Name</th>
                    <th class="text-white">Functions</th>
                </tr>
            </thead>
            <tbody>
            <% employees.forEach(function (entry) { %>
                <tr>
                    <td><%= entry.firstName %></td>
                    <td><%= entry.lastName %></td>
                    <td style="width: 10%; text-align: center;">
                        <a style="color: #555" href="/view/<%= entry.firstName %><%= entry.lastName %>" > VIEW
                            <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            </tbody>
            <% }) %>
        </table>
    <% } else { %> No entries! <a href="/new">Add one!</a>
    <% } %>  

<br />
</div>

<%- include ("scripts") %>
</body>
</html>